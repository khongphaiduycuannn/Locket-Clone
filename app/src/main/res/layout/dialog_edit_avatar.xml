<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:background="@drawable/bg_dialog_post_setting"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#212121"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/varela"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="13dp"
            android:text="Your profile picture is visible to everyone with your phone number."
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/btn_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_post_setting_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:paddingVertical="13dp"
        android:text="Choose from library"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_post_setting_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:paddingVertical="13dp"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textStyle="bold" />
</LinearLayout>