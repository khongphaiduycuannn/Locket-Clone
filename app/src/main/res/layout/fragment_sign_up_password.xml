<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:orientation="vertical"
    android:paddingTop="45dp"
    tools:context=".ui.register.SignUpPasswordFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_btn_back"
        android:src="@drawable/ic_back_left" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/varela"
            android:text="Enter your password"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_edt_email_address"
            android:fontFamily="@font/varela"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="18dp"
            android:paddingVertical="14dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#878787"
            android:textCursorDrawable="@drawable/edt_cursor"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_btn_continue_disable"
            android:fontFamily="@font/varela"
            android:gravity="center"
            android:paddingHorizontal="11dp"
            android:paddingVertical="5dp"
            android:text="Forgot password"
            android:textColor="#EBEBEB"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:background="@drawable/bg_btn_continue_disable"
        android:enabled="false"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:text="Continue"
        android:textColor="#505052"
        android:textSize="21sp"
        android:textStyle="bold" />
</LinearLayout>