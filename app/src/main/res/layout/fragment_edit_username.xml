<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:orientation="vertical"
    android:paddingTop="45dp"
    tools:context=".ui.profile.EditUsernameFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_btn_back"
        android:src="@drawable/ic_back_left" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/varela"
            android:text="Edit your name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_edt_email_address"
            android:fontFamily="@font/varela"
            android:hint="First name"
            android:paddingHorizontal="18dp"
            android:paddingVertical="14dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#878787"
            android:textCursorDrawable="@drawable/edt_cursor"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_edt_email_address"
            android:fontFamily="@font/varela"
            android:hint="Last name"
            android:paddingHorizontal="18dp"
            android:paddingVertical="14dp"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#878787"
            android:textCursorDrawable="@drawable/edt_cursor"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <carbon.widget.LinearLayout
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        app:carbon_cornerRadius="33dp"
        app:carbon_elevation="14dp"
        app:carbon_elevationShadowColor="#FFB702">

        <TextView
            android:id="@+id/txt_save"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:background="@drawable/bg_btn_continue_disable"
            android:fontFamily="@font/varela"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </carbon.widget.LinearLayout>
</LinearLayout>