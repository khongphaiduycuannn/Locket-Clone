<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:orientation="vertical"
    android:paddingTop="45dp"
    tools:context=".ui.login.LoginFragment">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_locket" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="9dp"
            android:fontFamily="@font/varela"
            android:text="Locket"
            android:textColor="#FFFFFF"
            android:textSize="29sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="@font/varela"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Live pics from your friends, on your home screen"
        android:textColor="#B7B7B7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <carbon.widget.LinearLayout
        android:id="@+id/btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        app:carbon_cornerRadius="33dp"
        app:carbon_elevation="14dp"
        app:carbon_elevationShadowColor="#FFB702">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:background="@drawable/bg_btn_continue_enable"
            android:fontFamily="@font/varela"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Create an account"
            android:textColor="#101010"
            android:textSize="18sp"
            android:textStyle="bold" />
    </carbon.widget.LinearLayout>

    <TextView
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/varela"
        android:gravity="center"
        android:text="Sign in"
        android:textColor="#E8E8E8"
        android:textSize="19sp"
        android:textStyle="bold" />
</LinearLayout>